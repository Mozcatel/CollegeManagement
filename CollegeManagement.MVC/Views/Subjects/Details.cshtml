@model CollegeManagement.MVC.Models.SubjectDetailView

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.SubjectName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Course Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            Teacher
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeacherName)
        </dd>

        <dt>
            Subject
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubjectName)
        </dd>
    </dl>
</div>
<button type="button" class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = Model.SubjectId })</button>
<button type="button" class="btn btn-default">@Html.ActionLink("Back to List", "Index")</button>
<div class="container-fluid">
    <h4>Students in Subject</h4>
    <table class="table table-hover table-striped">
        <tr>
            <th>
                Student
            </th>
            <th>
                Student Reg Number
            </th>
            <th>
                Student Birth Date
            </th>
            <th>
                Grade
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Grades)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentRegNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentBirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradeValue)
                </td>
                <td>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Edit", "Edit", new { id = item.StudentId })
                    </button>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Details", "Details", new { id = item.StudentId })
                    </button>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Delete", "Delete", new { id = item.StudentId })
                    </button>
                </td>
            </tr>
        }
    </table>
</div>