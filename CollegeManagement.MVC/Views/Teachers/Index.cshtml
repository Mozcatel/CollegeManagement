@model IEnumerable<CollegeManagement.MVC.Models.TeacherViewModel>

@{
    ViewBag.Title = "Teachers";
}

<h2>List of Teachers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeacherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherBirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherSalary)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherBirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherSalary)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TeacherId }) |
                @Html.ActionLink("Details", "Details", new { id = item.TeacherId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TeacherId })
            </td>
        </tr>
    }
</table>