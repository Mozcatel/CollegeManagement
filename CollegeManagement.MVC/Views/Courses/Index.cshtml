@model IEnumerable<CollegeManagement.MVC.Models.CourseViewModel>

@{
    ViewBag.Title = "Courses";
}

<h2>List of Courses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NumberOfTeachers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NumberOfStudents)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().GradeAverage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTeachers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfStudents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeAverage)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CourseId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CourseId })
            </td>
        </tr>
    }
</table>