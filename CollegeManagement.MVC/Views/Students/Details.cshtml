@model CollegeManagement.MVC.Models.StudentViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.StudentName) Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Student Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentName)
        </dd>

        <dt>
            Student Birth Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentBirthDate)
        </dd>
        <dt>
            Student Registry Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentRegNumber)
        </dd>
    </dl>
</div>

<button type="button" class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = Model.StudentId })</button>
<button type="button" class="btn btn-default">@Html.ActionLink("Back to List", "Index")</button>

<div class="container-fluid">
    <h4>Enrolled Subjects</h4>
    <table class="table table-hover table-striped">
        <tr>
            <th>
                Subject
            </th>
            <th>
                Teacher
            </th>
            <th>
                Grade
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Grades)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Teacher.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradeValue)
                </td>
                <td>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Edit", "Edit", new { id = item.SubjectId })
                    </button>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Details", "Details", new { id = item.SubjectId })
                    </button>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Delete", "Delete", new { id = item.SubjectId })
                    </button>
                </td>
            </tr>
        }
    </table>
</div>