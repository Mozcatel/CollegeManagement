@model CollegeManagement.MVC.Models.CourseDetailView

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.CourseName) Details</h2>

<button type="button" class="btn btn-default">@Html.ActionLink("Edit", "Edit", new { id = Model.CourseId })</button>
<button type="button" class="btn btn-default">@Html.ActionLink("Back to List", "Index")</button>
<div class="container-fluid">
    <h4>Course Subjects</h4>
    <button type="button" class="btn btn-toolbar">
        @Html.ActionLink("Create New", "Create")
    </button>
    <br />
    <table class="table table-hover table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subjects.FirstOrDefault().SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subjects.FirstOrDefault().TeacherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subjects.FirstOrDefault().NumberOfStudents)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Subjects)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfStudents)
                </td>
                <td>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Edit", "Edit", new { id = item.SubjectId })
                    </button>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Details", "Details", new { id = item.SubjectId })
                    </button>
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Delete", "Delete", new { id = item.SubjectId })
                    </button>
                </td>
            </tr>
        }
    </table>
</div>